<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:padding="@dimen/size_15dp"
               android:id="@+id/incomeDetailsCard"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.ksp.vasool.views.RobotoMediumTextView
                   android:textSize="@dimen/text_size_18sp"
                   android:text="Income Details"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Initial Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etLoanAmount"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="New Investment:"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etNewInvestmentAmount"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Collection Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etCollectionAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Interest Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etInterest"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Book/Card Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etBookAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <View
                   android:layout_marginTop="@dimen/size_15dp"
                   android:background="@color/divider_color"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/size_1dp"/>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:background="@drawable/ripple_bg_quick_action"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:paddingStart="@dimen/size_10dp"
                       android:text="Total Income Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:padding="@dimen/size_10dp"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content"/>

               </LinearLayout>
               <View
                   android:background="@color/divider_color"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/size_1dp"/>
           </LinearLayout>

           <LinearLayout
               android:padding="@dimen/size_15dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.ksp.vasool.views.RobotoMediumTextView
                   android:textSize="@dimen/text_size_18sp"
                   android:text="Expense Details"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Deposit Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etDepositAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Petrol Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etPetrolAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Line Expenses :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etExpenseAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:text="Personal Expenses :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.textfield.TextInputLayout
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/etPersonalExpenseAmt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="numberDecimal" />
                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>

               <View
                   android:layout_marginTop="@dimen/size_15dp"
                   android:background="@color/divider_color"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/size_1dp"/>

               <LinearLayout
                   android:paddingVertical="@dimen/size_5dp"
                   android:orientation="horizontal"
                   android:background="@drawable/ripple_bg_quick_action"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:paddingStart="@dimen/size_10dp"
                       android:text="Total Expense Amount :"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_height="wrap_content"/>

                   <com.ksp.vasool.views.RobotoMediumTextView
                       android:padding="@dimen/size_10dp"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:layout_height="wrap_content"/>

               </LinearLayout>
               <View
                   android:background="@color/divider_color"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/size_1dp"/>
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
